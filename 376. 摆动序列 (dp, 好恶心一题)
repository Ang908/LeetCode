class Solution {
    public int wiggleMaxLength(int[] nums) {
        int len = nums.length;
        if(len < 2){
            return len; 
        }
        int[] dp = new int[len];
        int prev = nums[1] - nums[0];
        dp[0] = 1;
        dp[1] = prev != 0 ? 2 : 1;
        for(int i = 2; i < len; i++){
            int curr = nums[i] - nums[i-1];
            if(prev == 0 && curr != 0){
                dp[i] = dp[i - 1] + 1;
                prev = curr;
                continue;
            }
            if((curr > 0 && prev < 0) || (curr < 0 && prev > 0)){
                dp[i] = dp[i - 1] + 1;
                prev = curr;
            } else {
                dp[i] = dp[i - 1];
            }
            
        }
        return dp[len-1];
    }
}
